<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_about_us"
    android:background="@drawable/meditation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ForEditText"
        android:orientation="horizontal"
        android:padding="15sp">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/qwekwe"
            />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/gabriela"
            android:gravity="center"
            android:text="Медитация"
            android:textColor="@color/WhiteText"
            android:textSize="26sp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background ="@drawable/radius_for_linearlayout"
            android:backgroundTint="#CCE4FFDF"
            android:layout_marginTop="40sp"
            android:layout_marginRight="60sp"
            android:layout_marginLeft="60sp"
            android:layout_marginBottom="150sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:fontFamily="@font/gabriela"
                android:textColor="@color/WhiteText"
                android:backgroundTint="@color/ForEditText"
                android:background="@drawable/radius_for_button"
                android:layout_gravity="center"
                android:text="Основы\nмедитации"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>