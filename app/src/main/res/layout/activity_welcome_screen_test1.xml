<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen_1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="70sp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="300sp"
        android:fontFamily="@font/gabriela"
        android:gravity="center"
        android:text="Вы часто нервничаете в течении дня?"
        android:textColor="@color/WhiteText"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC714980">

        <RadioButton
            android:id="@+id/radio_butt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.Нечасто"
            android:textSize="26sp"
            android:textColor="@color/WhiteText"
            android:layoutDirection="rtl"
            android:button="@drawable/custom_icon"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gabriela"/>

        <RadioButton
            android:id="@+id/radio_butt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.Редко"
            android:textSize="26sp"
            android:textColor="@color/WhiteText"
            android:layoutDirection="rtl"
            android:button="@drawable/custom_icon"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gabriela"/>

        <RadioButton
            android:id="@+id/radio_butt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.Довольно часто"
            android:textSize="26sp"
            android:textColor="@color/WhiteText"
            android:layoutDirection="rtl"
            android:button="@drawable/custom_icon"
            android:fontFamily="@font/gabriela"/>
    </LinearLayout>


</LinearLayout>